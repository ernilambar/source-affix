{
    "name": "source-affix",
    "version": "2.0.3",
    "license": "GPL-2.0+",
    "main_file": "source-affix.php",
    "repository": {
        "type": "git",
        "url": "https://github.com/ernilambar/source-affix"
    },
    "scripts": {
        "dev": "pnpm run build && gulp",
        "build": "gulp build",
        "format": "prettier --write \"src/**/*.scss\"",
        "version": "easy-replace-in-files",
        "preinstall": "npx only-allow pnpm",
        "prewpdeploy": "pnpm run deploy",
        "wpdeploy": "wp-deployer",
        "pot": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
        "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
        "predeploy": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o && shx rm -rf assets/ && pnpm run build",
        "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to && cd deploy/ && cross-var shx mv temp $npm_package_name && cross-var bestzip ../$npm_package_name.zip * && cd .. && cross-var shx mv $npm_package_name.zip deploy/"
    },
    "browserslist": "> 1%, not dead",
    "prettier": "@wordpress/prettier-config",
    "wpDeployer": {
        "repoType": "plugin",
        "username": "rabmalin",
        "buildDir": "deploy/source-affix",
        "deployAssets": false
    },
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@wordpress/eslint-plugin": "^13.7.0",
        "@wordpress/prettier-config": "^2.6.0",
        "bestzip": "^2.2.1",
        "browser-sync": "^2.27.11",
        "copy-files-from-to": "^3.6.0",
        "cross-var": "^1.1.0",
        "dotenv": "^16.0.3",
        "easy-replace-in-files": "^1.0.3",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-environments": "^1.0.1",
        "gulp-filter": "^7.0.0",
        "gulp-load-plugins": "^2.0.8",
        "gulp-plumber": "^1.2.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-uglify": "^3.0.2",
        "node-wp-i18n": "^1.2.7",
        "prettier": "^2.8.1",
        "sass": "^1.57.1",
        "shx": "^0.3.4",
        "wp-deployer": "^1.0.3"
    }
}
