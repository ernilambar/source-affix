{
	"name": "source-affix",
	"title": "Source Affix",
	"version": "2.0.1",
	"license": "GPL-2.0+",
	"main_file": "source-affix.php",
	"repository": "github:ernilambar/source-affix",
	"scripts": {
		"dev": "gulp",
		"build": "gulp build",
		"deploy": "gulp deploy",
		"pot": "npm run textdomain && npm run language",
		"language": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
		"textdomain": "wpi18n addtextdomain",
		"install-all": "composer install && npm install",
		"update-all": "composer update && npm update",
		"release": "npm install && composer install --no-dev --no-scripts -o && npm run deploy",
		"wpdeploy": "npm run release && grunt wp_deploy"
	},
	"devDependencies": {
		"browser-sync": "^2.26.7",
		"del": "^5.1.0",
		"dotenv": "^10.0.0",
		"grunt": "^1.4.1",
		"grunt-wp-deploy": "^2.1.2",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^6.1.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-filter": "^6.0.0",
		"gulp-jshint": "^2.1.0",
		"gulp-load-plugins": "^1.6.0",
		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^4.1.0",
		"gulp-sass-glob": "^1.1.0",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-uglify": "^3.0.2",
		"gulp-zip": "^5.0.1",
		"jshint": "^2.11.1",
		"node-wp-i18n": "^1.2.3"
	}
}
